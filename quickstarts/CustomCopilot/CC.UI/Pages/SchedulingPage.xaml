<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CC.UI.Pages.SchedulingPage"
             xmlns:ctrl="clr-namespace:CC.UI.Controls"
             Title="SchedulingPage">
    <VerticalStackLayout>
        <ListView>
            <ListView.Header>
                <StackLayout BackgroundColor="{DynamicResource Primary}">
                    <Label Text="Appointments" FontSize="Header"
                           HorizontalOptions="Center" VerticalOptions="Center" />
                </StackLayout>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid ColumnDefinitions="*,*">
                            <Label Grid.Column="0" Text=""  />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>