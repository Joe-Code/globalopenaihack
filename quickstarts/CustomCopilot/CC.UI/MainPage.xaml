<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ctrl="clr-namespace:CC.UI.Controls"
             xmlns:vm="clr-namespace:CC.UI.ViewModels"
             x:Class="CC.UI.MainPage">
    <ContentPage.BindingContext>
        <vm:MainViewModel />
    </ContentPage.BindingContext>

    <Grid ColumnDefinitions="4*,*" RowDefinitions="Auto,*">
        <ctrl:PatientList PatientSelected="PatientList_PatientSelected" Margin="50,10" />

        <ctrl:CopilotChat Grid.Column="1" />
    </Grid>
</ContentPage>
